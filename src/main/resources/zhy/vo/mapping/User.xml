<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhy.dao.IUserDAO">

    <resultMap id="UserHomeworkType" type="User">
        <id column="openid" property="openid"/>
        <result column="wxName" property="wxName"/>
        <result column="realName" property="realName"/>
        <result column="avatar" property="avatar"/>
        <collection property="HomeworkTypeList" column="openid" javaType="java.util.List" ofType="HomeworkType" select="com.zhy.dao.IHomeworkTypeDAO.findAllByUser"/>
    </resultMap>

    <!--加入新的用户-->
    <insert id="insertUser" parameterType="User">
        INSERT INTO user(openid, updateTime, state) VALUES (#{openid}, #{updateTime}, 0)
    </insert>

    <!--更新用户信息-->
    <update id="updateUser" parameterType="User">
        UPDATE user
          SET
            <if test="realName != null and realName !='' ">
              realName = #{realName}
            </if>
            <if test="wxName != null and wxName !='' ">
              wxName = #{wxName}, avatar = #{avatar}
            </if>
            <if test="admin != null and admin != '' ">
              admin = #{admin}
            </if>
        WHERE openid = #{openid}
    </update>

    <!--根据用户的openid查询用户的详细信息和功课类型-->
    <select id="findUserDetailsByopenid" parameterType="String" resultMap="UserHomeworkType">
        SELECT openid, wxName, realName, avatar FROM user WHERE openid=#{openid} AND state=1
    </select>

    <!--被HomeworkType.xml -> findHomeworkTypeDetailsBytypeId 的引用-->
    <!--根据typeId查询报课所有的类型下拥有的所有用户-->
    <select id="findAllByHomeworkType" parameterType="String" resultType="User">
        SELECT openid, wxName, realName, avatar FROM user
        WHERE openid IN (
        SELECT openid FROM user_homeworkType WHERE typeId=#{typeId}
        )
    </select>

    <!--被Admin.xml -> selectStudyCondition 引用-->
    <select id="findByOpenid" parameterType="String" resultType="User">
        SELECT openid, wxName, realName, avatar FROM user WHERE openid=#{openid}
    </select>

</mapper>